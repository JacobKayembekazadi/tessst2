<section class="bg-sloe-bg-default py-8 sm:py-12 md:py-16 border-t border-sloe-bg-border">
  <div class="max-w-container mx-auto px-4 sm:px-6 lg:px-page">
    <h3 class="text-xl sm:text-2xl md:text-3xl font-bold font-heading text-sloe-text-headings mb-8 text-center">
      {{ section.settings.heading }}
    </h3>

    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6">
      {% for product_block in section.blocks %}
        {% assign product = collections[section.settings.collection].products[forloop.index0] | default: all_products[product_block.settings.product] %}
        {% if product %}
          <div class="bg-sloe-bg-card rounded-card overflow-hidden hover:shadow-lg transition-all duration-300 group">
            
            <!-- Product Image -->
            <div class="aspect-square bg-sloe-bg-border relative overflow-hidden">
              {% if product.featured_image %}
                <a href="{{ product.url }}">
                  <img 
                    src="{{ product.featured_image | img_url: '300x300' }}" 
                    alt="{{ product.featured_image.alt | escape }}"
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  >
                </a>
              {% else %}
                <div class="w-full h-full flex items-center justify-center text-sloe-text-body">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 sm:h-12 w-8 sm:w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              {% endif %}
              
              <!-- Quick Add Button -->
              <div class="absolute inset-0 bg-black/50 items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 hidden sm:flex">
                <button class="bg-sloe-primary text-sloe-text-on-primary px-3 py-2 rounded-btn font-medium hover:bg-sloe-accent transition-colors text-sm">
                  Quick Add
                </button>
              </div>

              <!-- Sale Badge -->
              {% if product.compare_at_price > product.price %}
                <div class="absolute top-2 left-2 bg-sloe-primary text-sloe-text-on-primary px-2 py-1 rounded text-xs font-bold">
                  SALE
                </div>
              {% endif %}
            </div>

            <!-- Product Info -->
            <div class="p-3 sm:p-4">
              <h4 class="font-bold text-sloe-text-headings mb-2 line-clamp-2 group-hover:text-sloe-primary transition-colors duration-200 text-xs sm:text-sm">
                <a href="{{ product.url }}" class="block">
                  {{ product.title }}
                </a>
              </h4>
              
              <!-- Price -->
              <div class="flex items-center gap-1 mb-3">
                {% if product.compare_at_price > product.price %}
                  <span class="text-sm sm:text-base font-bold text-sloe-primary">
                    {{ product.price | money }}
                  </span>
                  <span class="text-xs text-sloe-text-body line-through">
                    {{ product.compare_at_price | money }}
                  </span>
                {% else %}
                  <span class="text-sm sm:text-base font-bold text-sloe-primary">
                    {{ product.price | money }}
                  </span>
                {% endif %}
              </div>

              <!-- Add to Cart Button -->
              <a 
                href="{{ product.url }}" 
                class="w-full bg-sloe-bg-border text-sloe-text-headings rounded-btn py-2 px-3 font-medium hover:bg-sloe-primary hover:text-sloe-text-on-primary transition-colors duration-200 text-center block text-xs sm:text-sm"
              >
                {% if product.available %}
                  Add to Cart
                {% else %}
                  Sold Out
                {% endif %}
              </a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>

{% schema %}
{
  "name": "Cart Recommendations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "You might also like"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Recommended Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cart Recommendations",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}