<section class="bg-sloe-bg-default py-16 sm:py-24 md:py-32 lg:py-48 text-center">
  <div class="max-w-container mx-auto px-4 sm:px-6 lg:px-page">
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold font-heading text-sloe-text-headings leading-tight" style="line-height: 1.1">
      {{ section.settings.heading_line1 }} <span class="text-sloe-primary">{{ section.settings.heading_line2 }}</span>
    </h1>
    <p class="text-base sm:text-lg md:text-xl text-sloe-text-body leading-relaxed mt-4 sm:mt-6 max-w-sm sm:max-w-lg md:max-w-2xl mx-auto px-4">
      {{ section.settings.subheading }}
    </p>
    <div class="mt-8 sm:mt-10 px-4">
      <a href="{{ section.settings.cta_url }}" class="bg-sloe-primary text-sloe-text-on-primary rounded-btn py-3 sm:py-4 px-6 sm:px-8 font-bold font-heading hover:bg-sloe-accent transition-colors duration-200 active:ring-4 ring-sloe-primary/50 text-base sm:text-lg inline-block w-full sm:w-auto">
        {{ section.settings.cta_text }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading_line1",
      "label": "Heading Line 1",
      "default": "Train Smarter. Perform Better."
    },
    {
      "type": "text",
      "id": "heading_line2",
      "label": "Heading Line 2 (Highlighted)",
      "default": "Unlock Your Peak."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Stop guessing your way to progress. Get your fully integrated system: AI-powered training and premium, science-backed supplements."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Start Your Free Trial Today"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
