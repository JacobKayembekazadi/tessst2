<section class="bg-sloe-bg-default py-12 sm:py-16 md:py-20">
  <div class="max-w-container mx-auto px-4 sm:px-6 lg:px-page text-center">
    <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold font-heading text-sloe-text-headings mb-4">
      {{ collection.title | default: section.settings.heading }}
    </h1>
    {% if collection.description != blank %}
      <div class="prose prose-invert mx-auto max-w-2xl">
        <p class="text-base sm:text-lg text-sloe-text-body leading-relaxed px-4">
          {{ collection.description }}
        </p>
      </div>
    {% elsif section.settings.description != blank %}
      <p class="text-base sm:text-lg text-sloe-text-body leading-relaxed max-w-2xl mx-auto px-4">
        {{ section.settings.description }}
      </p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Collection Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Collection Heading",
      "default": "All Products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Collection Description",
      "default": "Discover our complete range of premium supplements designed to elevate your fitness journey."
    }
  ]
}
{% endschema %}