<section class="bg-sloe-bg-default py-8 sm:py-12 md:py-16">
  <div class="max-w-container mx-auto px-4 sm:px-6 lg:px-page">
    <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold font-heading text-sloe-text-headings mb-8 text-center">
      Your Cart
    </h1>

    {% if cart.item_count > 0 %}
      <form action="/cart" method="post" novalidate class="cart-form">
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          
          <!-- Cart Items -->
          <div class="lg:col-span-2">
            <div class="space-y-4">
              {% for item in cart.items %}
                <div class="bg-sloe-bg-card rounded-card p-4 sm:p-6 border border-sloe-bg-border">
                  <div class="flex flex-col sm:flex-row gap-4">
                    
                    <!-- Product Image -->
                    <div class="w-full sm:w-24 h-48 sm:h-24 bg-sloe-bg-border rounded overflow-hidden flex-shrink-0">
                      {% if item.image %}
                        <img 
                          src="{{ item.image | img_url: '200x200' }}" 
                          alt="{{ item.product.title | escape }}"
                          class="w-full h-full object-cover"
                          loading="lazy"
                        >
                      {% else %}
                        <div class="w-full h-full flex items-center justify-center text-sloe-text-body">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                        </div>
                      {% endif %}
                    </div>

                    <!-- Product Details -->
                    <div class="flex-1 min-w-0">
                      <h3 class="font-bold text-sloe-text-headings text-base sm:text-lg mb-2">
                        <a href="{{ item.product.url }}" class="hover:text-sloe-primary transition-colors">
                          {{ item.product.title }}
                        </a>
                      </h3>
                      
                      {% if item.variant.title != 'Default Title' %}
                        <p class="text-sm text-sloe-text-body mb-2">{{ item.variant.title }}</p>
                      {% endif %}

                      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                        <!-- Quantity Controls -->
                        <div class="flex items-center gap-2">
                          <label for="quantity-{{ item.key }}" class="text-sm text-sloe-text-body">Qty:</label>
                          <div class="flex items-center border border-sloe-bg-border rounded">
                            <button 
                              type="button" 
                              class="px-3 py-2 text-sloe-text-body hover:text-sloe-primary transition-colors"
                              onclick="updateQuantity('{{ item.key }}', {{ item.quantity | minus: 1 }})"
                              {% if item.quantity <= 1 %}disabled{% endif %}
                            >
                              âˆ’
                            </button>
                            <input 
                              type="number" 
                              id="quantity-{{ item.key }}"
                              name="updates[{{ item.key }}]"
                              value="{{ item.quantity }}" 
                              min="0" 
                              class="w-16 text-center bg-transparent border-0 text-sloe-text-body focus:outline-none"
                              onchange="this.form.submit()"
                            >
                            <button 
                              type="button" 
                              class="px-3 py-2 text-sloe-text-body hover:text-sloe-primary transition-colors"
                              onclick="updateQuantity('{{ item.key }}', {{ item.quantity | plus: 1 }})"
                            >
                              +
                            </button>
                          </div>
                        </div>

                        <!-- Price and Remove -->
                        <div class="flex items-center justify-between sm:flex-col sm:items-end gap-2">
                          <div class="text-right">
                            <p class="text-lg font-bold text-sloe-primary">{{ item.final_line_price | money }}</p>
                            {% if item.quantity > 1 %}
                              <p class="text-sm text-sloe-text-body">{{ item.final_price | money }} each</p>
                            {% endif %}
                          </div>
                          <button 
                            type="button"
                            class="text-red-400 hover:text-red-300 transition-colors text-sm"
                            onclick="removeItem('{{ item.key }}')"
                          >
                            Remove
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>

            <!-- Cart Attributes/Notes -->
            <div class="mt-6 bg-sloe-bg-card rounded-card p-4 sm:p-6 border border-sloe-bg-border">
              <label for="cart-note" class="block text-sm font-medium text-sloe-text-headings mb-2">
                Special instructions for your order
              </label>
              <textarea 
                id="cart-note"
                name="note"
                rows="3"
                class="w-full bg-sloe-bg-default border border-sloe-bg-border rounded-btn py-3 px-4 text-sloe-text-body focus:outline-none focus:border-sloe-primary"
                placeholder="Add any special instructions here..."
              >{{ cart.note }}</textarea>
            </div>
          </div>

          <!-- Cart Summary -->
          <div class="lg:col-span-1">
            <div class="bg-sloe-bg-card rounded-card p-4 sm:p-6 border border-sloe-bg-border lg:sticky lg:top-24">
              <h2 class="text-xl font-bold font-heading text-sloe-text-headings mb-6">Order Summary</h2>
              
              <div class="space-y-4 mb-6">
                <div class="flex justify-between">
                  <span class="text-sloe-text-body">Subtotal ({{ cart.item_count }} item{% if cart.item_count != 1 %}s{% endif %})</span>
                  <span class="text-sloe-text-headings font-medium">{{ cart.total_price | money }}</span>
                </div>
                
                {% if cart.total_discounts > 0 %}
                  <div class="flex justify-between text-sloe-primary">
                    <span>Discount</span>
                    <span>-{{ cart.total_discounts | money }}</span>
                  </div>
                {% endif %}

                <div class="flex justify-between text-sm text-sloe-text-body">
                  <span>Shipping</span>
                  <span>Calculated at checkout</span>
                </div>
                
                <div class="border-t border-sloe-bg-border pt-4">
                  <div class="flex justify-between text-lg font-bold">
                    <span class="text-sloe-text-headings">Total</span>
                    <span class="text-sloe-primary">{{ cart.total_price | money }}</span>
                  </div>
                </div>
              </div>

              <!-- Free Shipping Progress -->
              {% assign free_shipping_threshold = 5000 %}
              {% assign remaining_for_free_shipping = free_shipping_threshold | minus: cart.total_price %}
              {% if remaining_for_free_shipping > 0 %}
                <div class="mb-6 p-4 bg-sloe-bg-default rounded-btn border border-sloe-bg-border">
                  <p class="text-sm text-sloe-text-body mb-2">
                    Add {{ remaining_for_free_shipping | money }} more for free shipping!
                  </p>
                  <div class="w-full bg-sloe-bg-border rounded-full h-2">
                    {% assign progress = cart.total_price | times: 100 | divided_by: free_shipping_threshold %}
                    <div class="bg-sloe-primary h-2 rounded-full transition-all duration-300" style="width: {{ progress }}%"></div>
                  </div>
                </div>
              {% else %}
                <div class="mb-6 p-4 bg-sloe-primary/10 rounded-btn border border-sloe-primary">
                  <p class="text-sm text-sloe-primary font-medium">ðŸŽ‰ You qualify for free shipping!</p>
                </div>
              {% endif %}

              <!-- Checkout Button -->
              <button 
                type="submit" 
                name="add" 
                class="w-full bg-sloe-primary text-sloe-text-on-primary rounded-btn py-4 px-6 font-bold font-heading hover:bg-sloe-accent transition-colors duration-200 text-lg mb-4"
                formaction="/cart/checkout"
              >
                Proceed to Checkout
              </button>

              <!-- Continue Shopping -->
              <a 
                href="/collections/all" 
                class="w-full border border-sloe-primary text-sloe-primary rounded-btn py-3 px-6 font-medium hover:bg-sloe-primary hover:text-sloe-text-on-primary transition-colors duration-200 text-center block"
              >
                Continue Shopping
              </a>

              <!-- Trust Badges -->
              <div class="mt-6 pt-6 border-t border-sloe-bg-border space-y-3">
                <div class="flex items-center gap-3 text-sloe-text-body text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sloe-primary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                  <span>Secure checkout</span>
                </div>
                <div class="flex items-center gap-3 text-sloe-text-body text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sloe-primary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                  </svg>
                  <span>Free shipping on $50+</span>
                </div>
                <div class="flex items-center gap-3 text-sloe-text-body text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sloe-primary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                  <span>30-day returns</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>

    {% else %}
      <!-- Empty Cart -->
      <div class="text-center py-16">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto text-sloe-text-body/50 mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17M17 17a2 2 0 100 4 2 2 0 000-4zM9 17a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h2 class="text-xl sm:text-2xl font-bold text-sloe-text-headings mb-4">Your cart is empty</h2>
        <p class="text-sloe-text-body mb-8">Looks like you haven't added anything to your cart yet.</p>
        <a href="/collections/all" class="bg-sloe-primary text-sloe-text-on-primary rounded-btn py-3 px-6 font-bold font-heading hover:bg-sloe-accent transition-colors duration-200 inline-block">
          Start Shopping
        </a>
      </div>
    {% endif %}
  </div>
</section>

<script>
function updateQuantity(key, newQuantity) {
  if (newQuantity < 0) return;
  
  const input = document.querySelector(`input[name="updates[${key}]"]`);
  if (input) {
    input.value = newQuantity;
    input.form.submit();
  }
}

function removeItem(key) {
  if (confirm('Are you sure you want to remove this item from your cart?')) {
    updateQuantity(key, 0);
  }
}
</script>

{% schema %}
{
  "name": "Cart Items",
  "settings": []
}
{% endschema %}