<footer class="py-16 bg-sloe-bg-card border-t border-sloe-bg-border">
  <div class="max-w-container mx-auto px-page">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-12">
      <!-- Quick Links -->
      <div>
        <h4 class="font-bold font-heading text-sloe-text-headings mb-4">Quick Links</h4>
        <ul class="space-y-3">
          {% for link in linklists[section.settings.menu_quick_links].links %}
            <li>
              <a href="{{ link.url }}" class="text-sloe-text-body/80 hover:text-sloe-primary transition-colors duration-200 text-sm leading-relaxed">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Support Links -->
      <div>
        <h4 class="font-bold font-heading text-sloe-text-headings mb-4">Support</h4>
        <ul class="space-y-3">
          {% for link in linklists[section.settings.menu_support].links %}
            <li>
              <a href="{{ link.url }}" class="text-sloe-text-body/80 hover:text-sloe-primary transition-colors duration-200 text-sm leading-relaxed">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Legal Links -->
      <div class="col-span-2 md:col-span-1">
        <h4 class="font-bold font-heading text-sloe-text-headings mb-4">Legal</h4>
        <ul class="space-y-3">
          {% for link in linklists[section.settings.menu_legal].links %}
            <li>
              <a href="{{ link.url }}" class="text-sloe-text-body/80 hover:text-sloe-primary transition-colors duration-200 text-sm leading-relaxed">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Socials -->
      <div class="col-span-2 md:col-span-1">
        <h4 class="font-bold font-heading text-sloe-text-headings mb-4">Follow Us</h4>
        <div class="flex space-x-5">
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" class="text-sloe-text-body hover:text-sloe-primary transition-colors duration-200" aria-label="Instagram">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" class="text-sloe-text-body hover:text-sloe-primary transition-colors duration-200" aria-label="Twitter / X">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.tiktok_url != blank %}
            <a href="{{ section.settings.tiktok_url }}" class="text-sloe-text-body hover:text-sloe-primary transition-colors duration-200" aria-label="TikTok">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-2.43.05-4.84-.94-6.61-2.9-1.5-1.68-2.13-3.8-2.1-5.93.01-1.92.61-3.84 1.8-5.41 1.11-1.44 2.62-2.5 4.27-3.11.02-1.9.01-3.8-.02-5.7.02-1.52.62-3.05 1.73-4.13 1.11-1.08 2.69-1.6 4.22-1.78l.01.02zM12.14 8.04c-1.51.01-2.99.31-4.33 1.05-1.06.58-1.9 1.4-2.47 2.45-.64 1.15-.9 2.44-.81 3.75.12 1.74.88 3.4 2.26 4.61 1.58 1.39 3.6 2.06 5.54 1.96 1.7-.09 3.33-.71 4.61-1.88 1.08-1.01 1.75-2.3 1.95-3.7.03-.23.03-.46.03-.69.02-2.88.01-5.76-.01-8.64-.2-.04-.4-.06-.6-.09-1.09-.16-2.19-.24-3.29-.25z"></path>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
    
    <div class="mt-16 border-t border-sloe-bg-border pt-8 text-center text-sm text-sloe-text-body/70">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu_quick_links",
      "label": "Quick Links Menu",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "menu_support",
      "label": "Support Menu"
    },
    {
      "type": "link_list",
      "id": "menu_legal",
      "label": "Legal Menu"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter / X URL"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    }
  ]
}
{% endschema %}
